{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "TokenShepherd",
  "version": "0.1.0",
  "identifier": "com.tokenshepherd.app",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "TokenShepherd",
        "width": 280,
        "height": 320,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
