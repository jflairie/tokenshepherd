{
  "name": "tokenshepherd",
  "version": "0.1.0",
  "description": "Real-time Claude Code quota monitoring and pace prediction",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ts": "dist/index.js",
    "tokenshepherd": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:cli": "tsc",
    "build:ui": "cd ui && tsc app.ts --target ES2020 --module ES2020 --lib ES2020,DOM --moduleResolution bundler",
    "dev": "tsx src/index.ts",
    "dev:menubar": "npm run build:cli && npm run build:ui && tauri dev",
    "build:menubar": "npm run build:cli && npm run build:ui && tauri build",
    "start": "node dist/index.js",
    "status": "tsx src/index.ts status",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "quota",
    "usage",
    "monitoring",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^22.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
